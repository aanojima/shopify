<div class="container">
  <div class="row">
      <div class="col-md-10 col-md-offset-1">
          <div class="panel-group" id="sentRequests">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      <h4 class="panel-title">
                          <a class="accordion-toggle" data-toggle="collapse" data-parent="#sentRequests" href="#collapseNew">
                              <h2 class=text-center>Send a New Request</h2>
                          </a>
                      </h4>
                  </div>
                  <div id="collapseOne" class="panel-collapse collapse in">
                      <div class="panel-body">
                          <div class="col-md-9">
                              <div class="row">
                                  <div class="col-md-12"> 
                                      <form class="form-inline" role="form" id="requestForm">
                                        <div class="form-group">
                                          <label class="sr-only" for "itemInput">Item</label>
                                          <div class="input-group">
                                              <span class="input-group-addon">Get me...</span>
                                              <input type="text" class="form-control" id="itemInput" placeHolder="I don't know, some Jordans or something.">
                                          </div>
                                        </div>
                                        <div class="form-group">
                                          <label class="sr-only" for "detailInput">Details</label>
                                          <div class="input-group">
                                            <span class="input-group-addon">Any specifics?</span>
                                            <input type="text" class="form-control" id="detailInput" placeHolder="I need the black and red ones with the velcro straps.">
                                          </div>
                                        </div>
                                        <div class="form-group">
                                          <label class="sr-only" for "priceInput">Price</label>
                                          <div class="input-group">
                                            <span class="input-group-addon">How much will you pay? $</span>
                                            <input type="number" class="form-control" id="detailInput" placeHolder="0.00">
                                          </div>
                                        </div>
                                        <div class="form-group">
                                          <label class="sr-only" for "priceInput">Need a Location?</label>
                                          <div class="input-group" id="addressGiven">
                                            <span class="input-group-addon">Do you need it from somewhere specific?</span>
                                            <span class="input-group-button btn-group">
                                                <div class="btn-group" data-toggle="buttons">
                                                    <label class="btn btn-primary">
                                                        <input type="radio" name="store" id="storeYes" value="Yes"> Yes
                                                    </label>
                                                    <label class="btn btn-primary">
                                                        <input type="radio" name="store" id="storeNo" checked value="No"> No
                                                    </label>
                                                </div>
                                            </span>
                                          </div>
                                        </div>
                                        <div class="form-group">
                                          <label class="sr-only" for="addressInput">Address</label>
                                          <div class="input-group">
                                              <span class="input-group-addon">If yes:</span>
                                              <input type="text" class="form-control" id="addressInput" placeholder="Address">
                                          </div>
                                        </div>
                                        <div class="form-group">
                                          <label class="sr-only" for="cityInput">Password</label>
                                          <input type="text" class="form-control" id="cityInput" placeholder="City">
                                        </div>
                                        <div class="form-group">
                                          <label class="sr-only" for="stateInput">State</label>
                                          <input type="text" class="form-control" id="stateInput" placeholder="State">
                                        </div>
                                        <div class="form-group">
                                          <label class="sr-only" for="zipInput">ZIP Code</label>
                                          <input type="number" class="form-control" id="zipInput" placeholder="ZIP Code">
                                        </div>
                                      </form>
                                  </div>
                              </div>
                          </div>
                          <div class="col-md-3 text-center">
                              <button type="submit" class="btn btn-lg btn-primary button-center-vertical" id="sendRequestButton">Send Request</button>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>

  <div class="row">
      <div class="col-md-5 col-md-offset-1">
          <div class="row" id="submittedRequestsTitleRow">
              <div class="col-md-12">
                  <h2 class=text-center>Your Submitted Requests</h2>
              </div>
          </div>
          
          {{#each yourRequests}}
          <div class="row">
              <div class="col-md-12">
                  <div class="panel">
                      <div class="col-md-9">
                          <div class="row">
                              <div class="col-md-12">
                                  <h4><b>
                                    {{#if open}}Not Yet Accepted{{/if}}
                                    {{#if accepted}}Accepted by {{agent}}{{/if}}
                                    {{#if purchased}}Purchased by {{agent}}{{/if}}
                                    {{#if delivered}}Delivered by {{agent}}{{/if}}
                                  </b></h4>
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12">
                                  <h4>{{item}}</h4>
                              </div>
                          </div>
                          <div class="row">
                            <div class="col-md-12">
                              {{details}}
                            </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12">
                                  Paying: ${{offer}}
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12">
                                  {{place}}
                              </div>
                          </div>
                      </div>
                      <div class="col-md-3">
                          <div class="row">
                              <div class="col-md-12 text-center">
                                  {{#if open}}<button type="button" class="btn btn-danger button-center-vertical">Cancel Request</button>{{/if}}
                                  {{#if accepted}}<button type="button" disabled="disabled" class="btn btn-default button-center-vertical">On the Way!</button>{{/if}}
                                  {{#if purchased}}<button type="button" class="btn btn-info button-center-vertical">Pay with Venmo</button>{{/if}}
                                  {{#if delivered}}<button type="button" class="btn btn-info button-center-vertical">Pay with Venmo</button>{{/if}}
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          {{/each}}

      </div>

      <div class="col-md-5">
          <div class="row">
              <div class="col-md-12">
                  <h2 class=text-center>Your Accepted Retrievals</h2>
              </div>
          </div>

          {{#each yourAcceptances}}
          <div class="row">
              <div class="col-md-12">
                  <div class="panel">
                      <div class="col-md-9">
                          <div class="row">
                              <div class="col-md-12">
                                  <h4><b>{{client}}</b></h4>
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12">
                                  <h4><i>{{address}}</i></h4>
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12">
                                  <h4>{{item}}</h4>
                              </div>
                          </div>
                          <div class="row">
                            <div class="col-md-12">
                              {{details}}
                            </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12">
                                  Paying: ${{offer}}
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12">
                                  {{place}}
                              </div>
                          </div>
                      </div>
                      <div class="col-md-3">
                          <div class="row">
                              <div class="col-md-12">
                                  <h5 class="text-center">
                                    {{#if accepted}}Accepted{{/if}}
                                    {{#if purchased}}Purchased{{/if}}
                                    {{#if delivered}}Delivered{{/if}}
                                  <h5>
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12 text-center">
                                  <button type="button" class="btn btn-primary button-center-vertical">I got it!</button>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          {{/each}}

      </div>
  </div>
  <br>
  <br>
  <br>
</div>